#!/bin/bash

# Lock the screen
pidof hyprlock || hyprlock &

# Ensure Proton Pass is locked
if command -v proton-pass >/dev/null && pgrep -x "proton-pass" >/dev/null; then
  proton-pass --lock >/dev/null 2>&1 || true
fi

# Avoid running screensaver when locked
pkill -f "alacritty --class Screensaver"
